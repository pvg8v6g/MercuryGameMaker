<UserControl x:Class="GameMaker.UX.Views.HomeView.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:homeView="using:GameMaker.UX.ViewModels.HomeView"
             xmlns:behaviors="using:GameLibrary.Behaviors"
             xmlns:ux="using:GameMaker.UX"
             xmlns:topBar="using:GameMaker.UX.Views.TopBar"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance homeView:HomeViewViewModel}"
             behaviors:LoadedBehavior.LoadedCommand="{Binding LoadedCommand}">
  <Grid>
    <Grid.Resources>
        <ux:ViewLocator x:Key="ViewLocator" />
    </Grid.Resources>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <ContentControl Content="{Binding NavigationService.TopBar, Converter={StaticResource ViewLocator}}"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch" />
  </Grid>
</UserControl>
