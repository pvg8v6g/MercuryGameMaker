<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="using:GameLibrary.Converters">
  <!-- Converters -->
  <converters:NullToVisibilityConverter x:Key="NullToCollapsedConverter" Invert="False" />
  <converters:NullToVisibilityConverter x:Key="NullToVisibleConverter" Invert="True" />
  <converters:NullToBooleanConverter x:Key="NullToFalseConverter" Invert="False" />
  <converters:NullToBooleanConverter x:Key="NullToTrueConverter" Invert="True" />
  <converters:RectPropertyConverter x:Key="RectWidthConverter" PropertyToExtract="Width" />
  <converters:RectPropertyConverter x:Key="RectHeightConverter" PropertyToExtract="Height" />
  <converters:RectPropertyConverter x:Key="RectValueConverter" PropertyToExtract="Rect" />
  <converters:RectPropertyConverter x:Key="RectXConverter" PropertyToExtract="X" />
  <converters:RectPropertyConverter x:Key="RectYConverter" PropertyToExtract="Y" />
  <converters:RectPropertyConverter x:Key="RectNegativeXConverter" PropertyToExtract="NegativeX" />
  <converters:RectPropertyConverter x:Key="RectNegativeYConverter" PropertyToExtract="NegativeY" />
  <converters:RectPropertyConverter x:Key="RectNormalizedConverter" PropertyToExtract="NormalizedRect" />
  <converters:NegateConverter x:Key="NegateConverter" />

  <Color x:Key="WhiteColor">#FBFBFB</Color>
  <Color x:Key="BlackColor">#050505</Color>
  <Color x:Key="DarkGreyColor">#464646</Color>
  <Color x:Key="MediumGreyColor">#868686</Color>
  <Color x:Key="LightGreyColor">#DADADA</Color>
  <Color x:Key="RedColor">#AB0908</Color>
  <Color x:Key="LightBlueColor">#57DCF1</Color>
  <Color x:Key="LightYellowColor">#FBEDAF</Color>

  <Color x:Key="PrimaryColor">#373737</Color>
  <Color x:Key="SecondaryColor">#5E5E5E</Color>
  <Color x:Key="TertiaryColor">#CBCBCB</Color>

  <Color x:Key="DarkPinkColor">#630322</Color>
  <Color x:Key="MediumPinkColor">#e70756</Color>
  <Color x:Key="LightPinkColor">#f18eaf</Color>

  <SolidColorBrush x:Key="WhiteBrush"
                   Color="{StaticResource WhiteColor}" />
  <SolidColorBrush x:Key="BlackBrush"
                   Color="{StaticResource BlackColor}" />
  <SolidColorBrush x:Key="DarkGreyBrush"
                   Color="{StaticResource DarkGreyColor}" />
  <SolidColorBrush x:Key="MediumGreyBrush"
                   Color="{StaticResource MediumGreyColor}" />
  <SolidColorBrush x:Key="LightGreyBrush"
                   Color="{StaticResource LightGreyColor}" />
  <SolidColorBrush x:Key="LightBlueBrush"
                   Color="{StaticResource LightBlueColor}" />
  <SolidColorBrush x:Key="LightYellowBrush"
                   Color="{StaticResource LightYellowColor}" />
  <SolidColorBrush x:Key="RedBrush"
                   Color="{StaticResource RedColor}" />
  <SolidColorBrush x:Key="DarkPinkBrush"
                   Color="{StaticResource DarkPinkColor}" />
  <SolidColorBrush x:Key="MediumPinkBrush"
                   Color="{StaticResource MediumPinkColor}" />
  <SolidColorBrush x:Key="LightPinkBrush"
                   Color="{StaticResource LightPinkColor}" />
  <SolidColorBrush x:Key="PrimaryBrush"
                   Color="{StaticResource PrimaryColor}" />
  <SolidColorBrush x:Key="SecondaryBrush"
                   Color="{StaticResource SecondaryColor}" />
  <SolidColorBrush x:Key="TertiaryBrush"
                   Color="{StaticResource TertiaryColor}" />
  <FontFamily x:Key="PrimaryFont">Calibri</FontFamily>
  <FontFamily x:Key="TitleFont">Forte</FontFamily>
  <x:Double x:Key="PrimaryFontSize">16</x:Double>
  <x:Double x:Key="TitleFontSize">26</x:Double>
  <x:Double x:Key="SmallIconSize">16</x:Double>
  <x:Double x:Key="IconSize">20</x:Double>
</ResourceDictionary>
