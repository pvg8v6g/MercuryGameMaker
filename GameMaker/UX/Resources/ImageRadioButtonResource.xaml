<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behaviors="using:GameLibrary.Behaviors">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="ms-appx:///UX/Resources/ApplicationResources.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <Style x:Key="ImageRadioButtonStyle" TargetType="RadioButton">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="MinWidth" Value="0" />
    <Setter Property="MinHeight" Value="0" />
    <Setter Property="behaviors:PointerCursorBehavior.CursorType" Value="Hand" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="RadioButton">
          <Grid Background="Transparent">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver">
                  <VisualState.Setters>
                    <Setter Target="HoverBorder.BorderBrush" Value="{StaticResource LightGreyBrush}" />
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <VisualState.Setters>
                    <Setter Target="HoverBorder.BorderBrush" Value="{StaticResource MediumPinkBrush}" />
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
              <VisualStateGroup x:Name="CheckStates">
                <VisualState x:Name="Checked">
                  <VisualState.Setters>
                    <Setter Target="CheckedBorder.BorderBrush" Value="{StaticResource MediumPinkBrush}" />
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Unchecked" />
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
              <Border x:Name="CheckedBorder"
                      Background="Transparent"
                      BorderThickness="2"
                      BorderBrush="Transparent"
                      CornerRadius="4">
                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  CornerRadius="4" />
              </Border>
              <Border x:Name="HoverBorder"
                      Background="Transparent"
                      BorderThickness="2"
                      BorderBrush="Transparent"
                      IsHitTestVisible="False"
                      CornerRadius="4" />
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
