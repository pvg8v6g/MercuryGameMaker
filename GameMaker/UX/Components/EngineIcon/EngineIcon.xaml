<UserControl x:Class="GameMaker.UX.Components.EngineIcon.EngineIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="using:GameLibrary.Models"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance models:CroppedImage}">
  <Grid>
    <!-- Template with Rect (clipped Canvas) -->
    <Canvas Width="{Binding Rect, Converter={StaticResource RectWidthConverter}}"
            Height="{Binding Rect, Converter={StaticResource RectHeightConverter}}"
            Visibility="{Binding Rect, Converter={StaticResource NullToCollapsedConverter}}">
      <Canvas.Clip>
        <RectangleGeometry Rect="{Binding Rect, Converter={StaticResource RectNormalizedConverter}}" />
      </Canvas.Clip>
      <Image Source="{Binding ImageSource}"
             Canvas.Left="{Binding Rect, Converter={StaticResource RectNegativeXConverter}}"
             Canvas.Top="{Binding Rect, Converter={StaticResource RectNegativeYConverter}}" />
    </Canvas>

    <!-- Template without Rect (plain Image) -->
    <Image Source="{Binding ImageSource}"
           Visibility="{Binding Rect, Converter={StaticResource NullToVisibleConverter}}" />
  </Grid>
</UserControl>
